<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:if="ant:if" name="uart" default="install">
	<target name="install" description="install all components">
		<copy todir="${install.documentation}" includeEmptyDirs="true">
			<fileset dir="doc" />
		</copy>
		
		<copy todir="${install.firmware}" includeEmptyDirs="true">
			<fileset dir="netx" />
		</copy>
		
		<copy todir="${install.lua}" includeEmptyDirs="true">
			<fileset dir="lua" />
		</copy>
		
		<!-- Copy the template to the destination and replace the tokens. -->
		<copy file="templates/test.lua" tofile="${install.base}/${muhkuh_test.module_name}.lua">
			<filterset>
				<filter token="MODULE_NAME" value="${muhkuh_test.module_name}" />
				<filter token="TEST_NAME"   value="${muhkuh_test.test_name}" />
			</filterset>
		</copy>
	</target>
</project>
